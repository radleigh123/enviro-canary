<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home"
    >

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstone.enviro.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_home_to_activity_settings"
            app:destination="@id/action_settings"
            />
    </fragment>

    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.capstone.enviro.ui.home.NotificationFragment"
        tools:layout="@layout/fragment_notification"
        >

        <action
            android:id="@+id/action_notification_to_fragment_profile"
            app:destination="@id/navigation_profile"
            />

    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.capstone.enviro.ui.home.ProfileFragment"
        tools:layout="@layout/fragment_profile"
        />

    <activity
        android:id="@+id/action_settings"
        android:name="com.capstone.enviro.ui.settings.SettingsActivity"
        tools:layout="@layout/activity_settings"
        />


</navigation>